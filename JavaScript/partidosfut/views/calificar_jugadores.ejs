<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calificar Jugadores</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <h1>Calificar Jugadores</h1>
        <button onclick="window.location.href='/calificar_partido';" class="btn btn-secondary mt-3">Volver Atrás</button>
        <% if (jugadores.length > 0) { %>
            <ul class="list-group">
                <% jugadores.forEach(jugador => { %>
                    <li class="list-group-item">
                        <strong><%= jugador.NombreJugador %></strong> 
                        (<%= jugador.EquipoCalificado %>) <!-- Nombre del equipo calificado -->
                        
                        <% if (jugador.calificaciones.length > 0) { %>
                            <ul class="list-group mt-2">
                                <% jugador.calificaciones.forEach(calificacion => { %>
                                    <li class="list-group-item">
                                        <strong>Puntuación:</strong> <%= calificacion.puntuacion %>
                                        <em> - <%= calificacion.comentario || 'Sin comentario' %></em> 
                                        <small>Por: <%= calificacion.Autor %></small>
                                    </li>
                                <% }); %>
                            </ul>
                        <% } else { %>
                            <p class="mt-2">No hay calificaciones aún.</p>
                        <% } %>

                        <!-- Si el jugador no se ha calificado a sí mismo y no ha calificado aún -->
                        <% if (jugador.id_jugador != idJugador && !jugador.yaCalifico) { %>
                            <!-- Formulario para calificar al jugador -->
                            <form action="/agregar_calificacion" method="post" class="mt-3">
                                <input type="hidden" name="id_partido" value="<%= idPartido %>">
                                <input type="hidden" name="id_jugador_calificado" value="<%= jugador.id_jugador %>">
                                <input type="hidden" name="id_jugador" value="<%= idJugador %>">

                                <div class="mb-3">
                                    <label for="puntuacion" class="form-label">Puntuación (1-10):</label>
                                    <input type="number" class="form-control" name="puntuacion" min="1" max="10" required>
                                </div>
                                <div class="mb-3">
                                    <label for="comentario" class="form-label">Comentario (opcional):</label>
                                    <textarea class="form-control" name="comentario" rows="3"></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Calificar</button>
                            </form>
                        <% } else if (jugador.id_jugador != idJugador && jugador.yaCalifico) { %>
                            <!-- Mostrar calificación ya realizada -->
                            <p class="mt-3 text-muted">Ya has calificado a este jugador.</p>
                        <% } else { %>
                            <p class="mt-3 text-muted">No puedes calificarte a ti mismo.</p>
                        <% } %>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No hay jugadores para calificar.</p>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>

</html>
