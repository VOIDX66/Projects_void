<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Consultar Infracciones</title>
</head>
<body>
  <div class="container">
    <h1 class="mt-4">Historial de Infracciones</h1>

    <% if (partidos.length > 0) { %>
      <table class="table table-bordered mt-4">
        <thead>
          <tr>
            <th>Partido</th>
            <th>Fecha</th>
            <th>Usuario</th>
            <th>Infracción</th>
          </tr>
        </thead>
        <tbody>
          <% partidos.forEach(function(partido) { %>
            <tr>
              <td>
                <%= partido.NombreEquipo1 %> vs <%= partido.NombreEquipo2 %>
              </td>
              <td>
                <%= new Date(partido.fecha).toLocaleDateString('es-ES') %> 
                <%= new Date(partido.fecha).toLocaleTimeString('es-ES', {hour: '2-digit', minute: '2-digit'}) %>
              </td>
              <td>
                <%= partido.nombre %> <!-- Nombre del usuario -->
              </td>
              <td>
                <% if (partido.descripcion) { %>
                  <span class="text-danger"><%= partido.descripcion %></span>
                <% } else { %>
                  <span class="text-muted">No hay infracción</span>
                <% } %>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <p>No tienes infracciones registradas.</p>
    <% } %>

    <!-- Botón para volver atrás -->
    <button onclick="window.history.back();" class="btn btn-secondary mt-3">Volver Atrás</button>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
