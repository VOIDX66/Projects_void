<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Consultar Infracciones - Fútbol 5</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Roboto:wght@400;500&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/consultar_infracciones.css">
</head>
<body>
  <div class="container">
    <h1 class="mt-4"><i class="fas fa-exclamation-triangle"></i> Historial de Infracciones</h1>

    <% if (partidos.length > 0) { %>
      <div class="table-responsive mt-4">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>Partido</th>
              <th>Fecha</th>
              <th>Infracción</th>
            </tr>
          </thead>
          <tbody>
            <% partidos.forEach(function(partido) { %>
              <tr>
                <td>
                  <i class="fas fa-futbol"></i> <%= partido.NombreEquipo1 %> vs <%= partido.NombreEquipo2 %>
                </td>
                <td>
                  <i class="far fa-calendar-alt"></i> <%= new Date(partido.fecha).toLocaleDateString('es-ES') %> 
                  <i class="far fa-clock"></i> <%= new Date(partido.fecha).toLocaleTimeString('es-ES', {hour: '2-digit', minute: '2-digit'}) %>
                </td>
                <td>
                  <% if (partido.descripcion) { %>
                    <span class="text-danger"><i class="fas fa-exclamation-circle"></i> <%= partido.descripcion %></span>
                  <% } else { %>
                    <span class="text-success"><i class="fas fa-check-circle"></i> Sin infracción</span>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="no-infracciones mt-4"><i class="fas fa-trophy"></i> ¡Felicidades! No tienes infracciones registradas.</p>
    <% } %>

    <button onclick="window.history.back();" class="btn btn-primary mt-3">
      <i class="fas fa-arrow-left"></i> Volver Atrás
    </button>
  </div>

  <div class="soccer-field">
    <div class="field-line center-line"></div>
    <div class="center-circle"></div>
    <div class="penalty-area-left"></div>
    <div class="penalty-area-right"></div>
    <div class="goal-left"></div>
    <div class="goal-right"></div>
    <div class="ball"></div>
    <div class="whistle"></div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>